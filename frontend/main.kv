#:kivy 1.0.9

<MainPage>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Minha Chave'
            font_size: 20
        Label:
            id: my_key_label
            text: ''
            font_size: 20
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Camera:
                id: camera
                resolution: (640,480)
                play: True
            Button:
                text: 'Capture'
                size_hint_y: None
                height: '48dp'
                on_press: root.send_image()
        BoxLayout:
            orientation: 'vertical'
            AsyncImage:
                id: async_image
                source: ''
    BoxLayout:
        orientation: 'vertical'
        padding: '20px'
        Label:
            text: 'URL: IP + Port'
            font_size: 20
        TextInput:
            id: url
            font_size: 20
    BoxLayout:
        orientation: 'vertical'
        padding: '20px'
        width: '100px'
        Button:
            text: 'Iniciar nova Conversa'
            font_size: 20
            on_press: root.start_new_conversation()
    BoxLayout:
        orientation: 'vertical'
        padding: '20px'
        Button:
            text: 'Entrar em uma Conversa'
            font_size: 20
        TextInput:
            id: user2_key
            font_size: 20

